<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android           = "http://schemas.android.com/apk/res/android"
        xmlns:app               = "http://schemas.android.com/apk/res-auto"
        xmlns:tools             = "http://schemas.android.com/tools"

        android:layout_width    = "match_parent"
        android:layout_height   = "match_parent"
        tools:context           = "com.example.camera.camera">

        <com.example.camera.CameraDevicePreview
            android:id              = "@+id/cameraPreviewWindow"
            android:layout_width    = "match_parent"
            android:layout_height   = "match_parent"/>

        <android.support.design.widget.FloatingActionButton
            android:id                  = "@+id/info"
            android:layout_width        = "wrap_content"
            android:layout_height       = "wrap_content"

            android:layout_alignBottom  = "@+id/cameraPreviewWindow"
            android:layout_alignEnd     = "@+id/cameraPreviewWindow"
            android:padding = "20dp"
            android:clickable           = "true"
            android:src                 = "@drawable/info_squared"
            app:fabSize                 = "normal"/>

        <include
            layout                          = "@layout/camera_controls"
            android:id                      = "@+id/controls"
            android:layout_height           = "wrap_content"
            android:layout_width            = "wrap_content"
            android:layout_alignParentEnd   = "true"
            android:layout_centerVertical   = "true"/>

    </RelativeLayout>
</layout>


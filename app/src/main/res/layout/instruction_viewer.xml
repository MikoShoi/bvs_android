<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.percent.PercentRelativeLayout
        xmlns:android           = "http://schemas.android.com/apk/res/android"
        xmlns:app               ="http://schemas.android.com/apk/res-auto"
        xmlns:tools             = "http://schemas.android.com/tools"

        android:id              = "@+id/layout"
        android:layout_width    = "match_parent"
        android:layout_height   = "match_parent"

        tools:showIn            = "@layout/instruction_viewer">

        <android.support.v4.view.ViewPager
            android:id              = "@+id/view_pager"
            android:layout_width    = "match_parent"
            android:layout_height   = "match_parent" />

        <ImageView
            android:id="@+id/label_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/label_guide"/>

        <ImageButton
            android:id                          = "@+id/prev_button"
            android:layout_width                = "wrap_content"
            android:layout_height               = "wrap_content"
            android:layout_alignParentBottom    = "true"
            android:layout_alignParentStart     = "true"
            android:layout_marginStart          = "10px"
            android:background                  = "@drawable/left_nav_arrow"
            app:layout_marginBottomPercent      = "40%"/>

        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10px"
            android:background="@drawable/right_nav_arrow"
            app:layout_marginBottomPercent="40%"/>

    </android.support.percent.PercentRelativeLayout>
</layout>
